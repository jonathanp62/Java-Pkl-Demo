/// The Items module
module Items

import "../src/main/resources/ItemModule.pkl"

// ItemModule.Item is module name dot class name

hidden baseItem: ItemModule.Item = new {
  name = ""
  itemNumber = 0
}

// When being consumed by Java, the generated list must
// declare its type despite being redunant in this case
// with the ItemModule.pkl definition. The reason seems
// to avoid 'items' being a Dynamic object instead of a
// list.

items: Listing<ItemModule.Item> = new {
  for (offset in List(0, 1, 2, 3)) {
    (baseItem) {
      name = "Item - " + offset.toString()
      itemNumber = offset + 1
    }
  }
}
